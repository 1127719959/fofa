


<%= form_for(@target) do |f| %>
    <% if @target.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@target.errors.count, "error") %> prohibited this target from being saved:</h2>

          <ul>
            <% @target.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">目标内容</header>
          <div class="panel-body">
            <form class="form-horizontal bordered-group" role="form">
              <div class="form-group">
                <label class="col-sm-2 control-label">企业名称</label>
                <div class="col-sm-10">
                  <%= f.text_field :name, class:"form-control"%>
                  <p class="help-block">可能存在多个公司名称，这里只填写一个主要的名称</p>
                </div>
                <label class="col-sm-2 control-label">网址</label>
                <div class="col-sm-10">
                  <%= f.text_field :website, class:"form-control"%>
                  <p class="help-block">只填写主域名，后续再进行多个域名的管理</p>
                </div>
                <label class="col-sm-2 control-label">标签</label>
                <div class="col-sm-10">
                  <div id="pillbox" class="pillbox">
                    <ul>
                      <li class="bg-default" data-value="gov">政府</li>
                      <li class="bg-success">上市公司</li>
                      <li class="bg-warning">互联网企业</li>
                      <li class="bg-danger">金融</li>
                      <li class="bg-info">世界500强</li>
                      <li class="bg-success">央企</li>
                      <li class="bg-default">高校</li>
                    </ul>
                  </div>
                </div>

                <label class="col-sm-2 control-label">备注</label>
                <div class="col-sm-10">
                  <%= f.text_area :memo, class:"form-control" %>
                </div>

                <p></p>
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit value:"保存", class:"btn btn-primary" %>
                </div>
              </div>
            </form>
          </div>
        </section>
      </div>
    </div>
<% end %>
<%= javascript_include_tag params[:controller] %>