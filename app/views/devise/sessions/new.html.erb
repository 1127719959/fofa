<h1></h1>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="well bs-component">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
          <fieldset>
            <legend>用户登录</legend>
            <div class="form-group">
              <label for="inputEmail" class="col-lg-3 control-label">用户名/邮箱</label>
              <div class="col-lg-9">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user"></i></span>
                  <%= f.email_field :login, autofocus: true, class: "form-control", :placeholder=>"用户名或者邮箱"%>
                </div>

              </div>
            </div>

            <div class="form-group">
              <label for="inputPassword" class="col-lg-3 control-label">密码</label>
              <div class="col-lg-9">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                  <%= f.password_field :password, class: "form-control", :placeholder=>"Password"%>
                </div>
                <% if devise_mapping.rememberable? -%>
                    <div><%= f.check_box :remember_me %> 记住我</div>
                <% end -%>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-3">
                <%= f.submit "登录", class:"btn btn-primary" %>
                <%= render "devise/shared/links" %>
              </div>
            </div>

          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
