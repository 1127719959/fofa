<%= stylesheet_link_tag params[:controller] %>


<%= render 'sidebar' %>

<div id="content">
<!-- Start .content-wrapper -->
<div class="content-wrapper">
<div class="row">
  <!-- Start .row -->
  <!-- Start .page-header -->
  <div class="col-lg-12 heading">
    <h1 class="page-header"><i class="im-screen"></i> 我收藏的规则列表</h1>
    <!-- Start .bredcrumb -->
    <ul id="crumb" class="breadcrumb"><li><i class="im-home"></i><a href="index.html">控制面板</a><i class="en-arrow-right7"></i></li><li><i class="im-screen"></i> 规则列表 </li></ul>
    <!-- End .breadcrumb -->
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th width="10%">日期</th>
        <th width="10%">厂商</th>
        <th width="10%">贡献者</th>
        <th width="50%">规则测试</th>
        <th width="20%">操作</th>
      </tr>
      </thead>

      <tbody>
      <% @rules.each do |rule| %>
          <tr>
            <td><%= link_to rule.created_at.strftime("%Y-%m-%d"), rule %></td>
            <td><%= link_to rule.product, rule.producturl%></td>
            <td><%if rule.user %><%= link_to rule.user.username, rule.producturl%><% end %></td>
            <td><%= link_to rule.rule, "/search/result?qbase64="+Base64.encode64(rule.rule)%></td>
            <td>
              <%= link_to '取消收藏', "/save/#{rule.id}", :class=>"btn btn-success btn-sm "%>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @rules, :container => false %>
  </div>
  <!-- End .page-header -->
</div>
<!-- End .row -->
</div>
<!-- End .content-wrapper -->
<div class="clearfix"></div>
</div>

