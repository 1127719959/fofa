<% if @person && @person.errors.any? %>
    <% @person.errors.full_messages.each do |message| %>
    $("#logPanel").append($("<li />").html("<%= message.html_safe %>"));
    <% end %>
<% else %>
    $(".person-list-index").html("<%= escape_javascript(render 'index') %>");
<% end %>

