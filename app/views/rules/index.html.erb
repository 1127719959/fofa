
<div class="page-header" id="banner">
  <div class="row">
    <h3 class="col-xs-12 col-sm-4">规则列表</h3>
    <div class="col-xs-12 col-sm-8">
        <div class="pull-right col-sm-auto">
          <%= link_to raw('<li class="fa fa-plus"></li> 提交规则'), new_rule_path,
                                                        :class=>"btn btn-info btn-sm " %>
        </div>
    </div>
  </div>

<table class="table table-striped table-hover table-bordered">
  <thead>
  <tr>
    <th width="10%">日期</th>
    <th width="10%">厂商</th>
    <th width="10%">贡献者</th>
    <th width="50%">规则测试</th>
    <th width="20%">操作</th>
  </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= link_to rule.created_at.strftime("%Y-%m-%d"), rule %></td>
        <td><%= link_to rule.product, rule.producturl%></td>
        <td><%if rule.user %><%= link_to rule.user.username, rule.producturl%><% end %></td>
        <td><%= link_to rule.rule, "/search/result?qbase64="+Base64.encode64(rule.rule)%></td>
        <td>
          <%= link_to '收藏', "/save/#{rule.id}", :class=>"btn btn-success btn-sm "%>
          <!--
          <%= link_to '查看', rule %>
          <%= link_to '编辑', edit_rule_path(rule) %>
            <%= link_to '删除', rule, method: :delete, data: { confirm: '确定要删除吗?' } %>
            -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


